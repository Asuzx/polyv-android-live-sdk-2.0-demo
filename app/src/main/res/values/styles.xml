<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PlayerTheme" parent="AppTheme">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="PageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/talk_common_margin</item>
        <item name="android:src">@drawable/polyv_iv_emo_dot</item>
    </style>

    <style name="iv_click_controller_port_bottom">
        <item name="android:layout_width">@dimen/bottom_layout_height</item>
        <item name="android:layout_height">@dimen/bottom_layout_height</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/polyv_commom_click_color_gray</item>
        <item name="android:scaleType">center</item>
    </style>

</resources>
